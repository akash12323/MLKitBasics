<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TextTranslationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/xyz"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Translater"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:layout_below="@id/xyz"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Source Language"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCategory1"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <EditText
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Type here..."
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:background="@drawable/edittext_background"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorToolbar"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"
                android:id="@+id/btnTranslate"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Target Language"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCategory"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <EditText
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translatedText"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Translated text..."
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/mic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_mic"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@color/colorBackground"
        />

</RelativeLayout>